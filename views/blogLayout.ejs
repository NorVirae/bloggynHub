<!-- Blog layout  -->
<div class="container">
    
  <div class="row">
<div class="col-lg-9 mb-4">

      <div class="card mt-4  h-100">
          <div class="card-body">
           <small class="text-muted">~~~ Article by <%=post.author%></small>

           <center> <h5 class="h4 card-title"><%- post.title %></h5></center>
            <p class="card-text"> <%- post.body%></p>
    
           
          </div>
          <div class="">

            <i class="far fa-thumbs-up  m-2 "> 6 likes</i>
            <i class="far fa-thumbs-down  m-2 "> 9 dislikes</i>
            <i class="far fa-comment  m-2" type="button" data-toggle="modal" data-target="#commentmodal"
              data-whatever="@getbootstrap"> 7 comments</i>
            <!-- Modal -->
            <div class="modal fade" id="commentmodal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
              aria-hidden="true">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Comment</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                    <form>
    
                      <div class="form-group">
                        <label for="message-text" class="col-form-label">Message:</label>
                        <textarea class="form-control" id="message-text"></textarea>
                      </div>
                    </form>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Send</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        
  </div>


</div>

<div class="col-lg-3 mt-3">
  <ul class="list-group">
    <center>
      <h3 class="h3">Recent Post</h3>
    </center>
    <%blogList.reverse().forEach(function(rec, index){%>
      <% if (index<5){%>
      <li class="list-group-item"><a href="/users/<%=rec._id%>"><%=rec.title%></a></li>
      <%}%>

    <%})%>
    
    

  </ul>


  <ul class="list-group">
      <center>
        <h3 class="h3">Popular Posts</h3>
      </center>
      <%blogList.reverse().forEach(function(rec, index){%>
        <% if (index<5){%>
        <li class="list-group-item"><a href="/users/<%=rec._id%>"><%=rec.title%></a></li>
        <%}%>
      <%})%>

    </ul>




</div>
</div>




</div>

<!-- end of card -->
